font-4 = Font Awesome 5 Free Solid:pixelsize=8;2
font-5 = Font Awesome 5 Brands:pixelsize=8;2

modules-left = i3
modules-center = current_user updates filesystem xkeyboard memory cpu battery dollarrate vpn wlan eth_custom gatewaylan gatewaywan
modules-right = pulseaudio bth keyboardlayout clickdate 
;modules-right powermenu 

[module/current_user]
type = custom/script
exec = whoami
interval = 10
format =  <label>

[module/eth_custom]
type = custom/script
exec = ip route | grep src | awk '{print $9}'
format =  <label>
interval = 10

[module/updates]
type = custom/script
exec = "if [[ $(($(checkupdates | wc -l) + $(yay -Qua | wc -l))) -eq 0 ]]; then echo "0" ;else echo "$(($(checkupdates | wc -l) + $(yay -Qua | wc -l)))" ; fi"
format =  <label> 
click-right= tilix --working-directory=/home/$USER --command='yay -Syu --aur' 
click-left= tilix --working-directory=/home/$USER --command='sudo pacman -Syyuu'
interval = 600

[module/gatewaylan]
type = custom/script
exec = /sbin/ip route | awk '/default/ {print $3}'
format =  <label>
interval = 1
click-right = "nm-connection-editor &"

[module/gatewaywan]
type = custom/script
exec = echo "$(curl -s https://ipinfo.io/ip) $(curl -s https://ipinfo.io/city)"
format =  <label>
interval = 30 

[module/bth]
type = custom/script
exec = "systemctl is-active --quiet bluetooth && echo 'ON' || echo 'OFF'"
interval = 2
click-left = blueman-manager &
format =  <label>

[module/wlan]
type = internal/network
interface = wlp3s0	
interval = 3.0

format-connected = <ramp-signal> <label-connected> 
;format-connected-underline = #444444
label-connected = %essid% %local_ip%

format-disconnected = <label-disconnected>
;format-disconnected = <label-disconnected>
;format-disconnected-underline = #ff0000
label-disconnected =  OFF
label-disconnected-foreground = #666666

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = #ffffff

[module/eth]
type = internal/network
interface = enp1s0
interval = 1.0

;format-connected-underline = #666666
format-connected-prefix = " "
format-connected-prefix-foreground = #ffffff
label-connected = %local_ip% %linkspeed%
 
format-disconnected = <label-disconnected>
;format-disconnected-underline = #666666
label-disconnected =  OFF
label-disconnected-foreground = #666666

[module/vpn]
type = custom/script
exec = "if [[ $(pgrep -x openvpn) ]]; then echo 'VPN ON'; else echo 'VPN OFF'; fi"
;exec-if = pgrep -x openvpn
interval = 1
format =  <label>

[module/dollarrate]
type = custom/script
exec = "curl -s https://www.x-rates.com/table/\?from\=USD\&amount\=1 | grep ';to=BRL' | awk '{print $3}' | cut -c59-62"

interval = 5
format =  <label>
format-padding = 1
click-left = xdg-open https://www.x-rates.com/table/\?from\=USD\&amount\=1

[module/keyboardlayout]
type = custom/script
exec = "setxkbmap -query | grep layout | cut -d ':' -f 2 | sed -e 's/^[ \t]*//'"

click-left = "exec setxkbmap us intl"
click-right = "exec setxkbmap -layout br -model abnt2"

interval = 1
format =  <label>
format-padding = 0

